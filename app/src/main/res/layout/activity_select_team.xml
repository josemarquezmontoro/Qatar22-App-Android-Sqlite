            style="@style/btnCtry"
            android:drawableLeft="@drawable/eeuuflag"
            android:text="@string/btnEeuu"
        />

        <Button
            android:id="@+id/btnUrg"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/uruguayflag"
            android:text="@string/btnUrg"
        />

        <Button
            android:id="@+id/btnWal"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/walesflag"
            android:text="@string/btnWal"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        style="@style/llCountries"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
        app:layout_constraintWidth_min="380dp">

        <Button
            android:id="@+id/btnSrb"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/serbiaflag"
            android:text="@string/btnSrb"
        />

        <Button
            android:id="@+id/btnStk"
            style="@style/btnCtry"
            android:layout_width="10dp"
            android:drawableLeft="@drawable/southkoreaflag"
            android:text="@string/btnStk"
        />

        <Button
            android:id="@+id/btnSp"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/spainflag"
            android:text="@string/btnSp"
        />

        <Button
            android:id="@+id/btnSwz"
            android:layout_width="10dp"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/switzerlandflag"
            android:text="@string/btnSwz"
        />
    </LinearLayout>

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/red"
        android:text="@string/btnAccept"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />
</androidx.constraintlayout.widget.ConstraintLayout>