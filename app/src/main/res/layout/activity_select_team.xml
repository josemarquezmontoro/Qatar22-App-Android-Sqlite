<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelectTeam">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:text="@string/sel_team"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        style="@style/llCountries"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintWidth_min="380dp">

        <Button
            android:id="@+id/btnArg"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/argentinaflag"
            android:text="@string/btnArg"
        />

        <Button
            android:id="@+id/btnAus"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/australiaflag"
            android:text="@string/btnAus"
        />

        <Button
            android:id="@+id/btnBlg"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/belgiumflag"
            android:text="@string/btnBlg"
        />

        <Button
            android:id="@+id/btnBrz"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/brazilflag"
            android:text="@string/btnBrz"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        style="@style/llCountries"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintWidth_min="380dp">

        <Button
            android:id="@+id/btnCmr"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/cameroonflag"
            android:text="@string/btnCmr"
        />

        <Button
            android:id="@+id/btnCnd"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/canadaflag"
            android:text="@string/btnCnd"
        />

        <Button
            android:id="@+id/btnCstRc"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/costaricaflag"
            android:text="@string/btnCstRc"
        />

        <Button
            android:id="@+id/btnCrc"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/croatiaflag"
            android:text="@string/btnCrc"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        style="@style/llCountries"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintWidth_min="380dp">

        <Button
            android:id="@+id/btnDnmk"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/denmarkflag"
            android:text="@string/btnDnmk"
        />

        <Button
            android:id="@+id/btnEcd"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/ecuadorflag"
            android:text="@string/btnEcd"
        />

        <Button
            android:id="@+id/btnEng"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/englandflag"
            android:text="@string/btnEng"
        />

        <Button
            android:id="@+id/btnFr"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/franceflag"
            android:text="@string/btnFr"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        style="@style/llCountries"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintWidth_min="380dp">

        <Button
            android:id="@+id/btnGrm"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/germanyflag"
            android:text="@string/btnGrm"
        />

        <Button
            android:id="@+id/btnGh"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/ghanaflag"
            android:text="@string/btnGh"
        />

        <Button
            android:id="@+id/btnIr"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/iranflag"
            android:text="@string/btnIr"
        />

        <Button
            android:id="@+id/btnJp"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/japanflag"
            android:text="@string/btnJp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        style="@style/llCountries"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintWidth_min="380dp">

        <Button
            android:id="@+id/btnMx"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/mexicoflag"
            android:text="@string/btnMx"
        />

        <Button
            android:id="@+id/btnMor"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/moroccoflag"
            android:text="@string/btnMor"
        />

        <Button
            android:id="@+id/btnNth"
            android:layout_width="10dp"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/netherlandsflag"
            android:text="@string/btnNth"
        />

        <Button
            android:id="@+id/btnPl"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/polandflag"
            android:text="@string/btnPl"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        style="@style/llCountries"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintWidth_min="380dp">

        <Button
            android:id="@+id/btnPrt"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/portugalflag"
            android:text="@string/btnPrt"
        />

        <Button
            android:id="@+id/btnQt"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/qatarflag"
            android:text="@string/btnQt"
        />

        <Button
            android:id="@+id/btnSdar"
            style="@style/btnCtry"
            android:layout_width="10dp"
            android:drawableLeft="@drawable/saudiarabiaflag"
            android:text="@string/btnSdar"
        />

        <Button
            android:id="@+id/btnSn"
            style="@style/btnCtry"
            android:drawableLeft="@drawable/senegalflag"
            android:text="@string/btnSn"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        style="@style/llCountries"
        app:layout_constraintBottom_toTopOf="@+id/btnAccept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
        app:layout_constraintWidth_min="380dp">

        <Button
            android:id="@+id/btnTn"
