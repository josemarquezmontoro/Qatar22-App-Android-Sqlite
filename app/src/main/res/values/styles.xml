<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define Button Styles -->
    <style name="btnHomeScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btnDatePhase">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btnTm">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="btnSaveReset">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btnCtry">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Define Text Views -->
    <style name="txtDatePhase">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">""</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="txtFl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">""</item>
    </style>

    <!-- Define Linear Layouts -->
    <style name="llCountries">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Define Frame Layouts -->
    <style name="flResults">
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Define Table Rows -->
    <style name="tbRowFl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>